<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.haven.hotels.hotelshaven">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo72"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
        <activity
            android:name=".activities.WebViewActivity"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".activities.CookieActivity"
            android:label="@string/title_activity_cookie"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.OffersActivity"
            android:label="@string/title_activity_offers"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.AboutusActivity"
            android:label="@string/title_activity_aboutus"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.PrivacyPolicyActivity"
            android:label="@string/title_activity_privacy_policy"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.TermsActivity"
            android:label="@string/title_activity_terms"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>